// Place your settings in this file to overwrite default and user settings
{
  "editor.formatOnSave": true,
  "editor.rulers": [80, 120],
  "editor.tabSize": 2,
  "files.exclude": {
    "lib/**/*": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "coverage": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true
  },
  "javascript.validate.enable": false,
  "prettier.eslintIntegration": true,
  "eslint.enable": true
}
