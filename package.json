{
  "name": "@helpscout/fancy",
  "private": false,
  "version": "0.4.1",
  "description": "A simple way to include CSS with React Components",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.m.js",
  "source": "lib/index.js",
  "scripts": {
    "babel": "babel --presets=react --plugins=transform-object-rest-spread --no-babelrc -d lib --ignore '*.test.js' src",
    "build": "npm run lint && npm run clean && npm run babel && npm run bundle",
    "bundle": "microbundle build --external all --jsx React.createElement",
    "clean": "rm -rf dist",
    "coverage": "nyc report --temp-directory=coverage --reporter=text-lcov | coveralls",
    "dev": "jest --watchAll",
    "lint": "standard 'src/**/*.js' --fix",
    "test": "npm run lint && npm run test:coverage",
    "test:coverage": "jest --coverage",
    "publish": "np --no-yarn --no-publish",
    "version": "npm run build",
    "postversion": "npm publish"
  },
  "author": "Jon Quach <hello@jonquach.com> (https://jonquach.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helpscout/fancy.git"
  },
  "bugs": {
    "url": "https://github.com/helpscout/fancy/issues"
  },
  "keywords": [
    "awesomecss",
    "components",
    "css",
    "css-in-js",
    "fancy",
    "helpscout",
    "react",
    "styled",
    "styled-components"
  ],
  "engines": {
    "node": ">=8"
  },
  "peerDependencies": {
    "react": "^15"
  },
  "dependencies": {
    "stylis": "3.5.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-jest": "22.4.3",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "coveralls": "3.0.0",
    "enzyme": "2.9.1",
    "jest": "22.4.3",
    "jest-cli": "22.4.3",
    "microbundle": "0.4.4",
    "np": "2.20.1",
    "nyc": "11.7.1",
    "react": "^15",
    "react-dom": "^15",
    "react-test-renderer": "16.2.0",
    "standard": "11.0.1"
  },
  "standard": {
    "ignore": [
      "dist"
    ],
    "globals": [
      "Event",
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "jasmine",
      "jest",
      "React",
      "react",
      "test",
      "mount"
    ]
  }
}
